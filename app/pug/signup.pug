extends layouts/auth

block variables
    -
        var title = "Регистрация"
        var leftSignupFormList = [
                {label:"Имя", type:"text",name:"user[firstName]",id:"fName"},
                {label:"Фамилия", type:"text",name:"user[secondName]",id:"fSecondName"},
                {label:"Пол", type:"radio",name:"user[gender]",id:"fGender",rLabels: ['Мужской','Женский'],rValues: ['male','female']},
                {label:"Электронная почта",name:"user[email]",id:"fEmail",type:"email"},
                {label:"Номер телефона",name:"user[phone]",id:"fPhone",type:"text",placeholder: "+7 (___) ___ __-__"}
            ]
        var rightSignupFormList = [
                {label:"Отчество", type:"text",name:"user[middleName]",id:"fMiddleName"},
                {label:"Город",name:"user[city]",id:"fCity", type:"text"},
                {label:"Место обучения",name:"user[university]",id:"fUniversity" , type:"text"},
                {label:"Факультет",name:"user[faculty]",id:"fFaculty", type:"text"},
                {label:"Дата рождения",name:"user[date]",id:"fDate", type:"date"}
            ]

block content
    .content__container
        .content__main.content__main--ta_center
            .content__row.content__row--display_i-b
                .container__body
                    .auth.frame.frame--style_shadow
                        h2.auth__header.frame__header Регистрация участника
                        .frame__body
                            form.auth__form.form
                                .form__body
                                    .form__container.form__container--style_columns
                                        .form__col
                                            +formList(leftSignupFormList)
                                        .form__col
                                            +formList(rightSignupFormList)
                                    .form__container
                                        .form__input-wrap.form__input-wrap--style_h
                                            .form__input.form__offer
                                                input(type="checkbox",required,id="fOffer").input.input--type_checkbox
                                                label(for="fOffer").label.label--f-z_12= "Я прочитал и согласен с условиями "
                                                a(href="#").form__link.link ”Пользовательского соглашения”
                                            .notify.notify--error.form__offer
                                                p.notify__message Исправьте выделенные поля и повторите еще раз
                                            a(href="./index_login.html").button.button--king-blue Регистрация
                                .form__footer
                                    a(href="./index.html").form__link.form__home-link.link
                                        i.fas.fa-home.link__icon
                                        | Вернуться на главную




