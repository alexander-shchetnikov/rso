include ../components/forms

doctype html

block variables
    -
        var title


html(lang="ru")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(rel="stylesheet", href="css/main.css")
        link(rel="stylesheet", href="css/libs.css")
        link(rel="stylesheet", href="css/admin.css")
        script(defer,src="js/libs.min.js")
        script(defer,src="https://use.fontawesome.com/releases/v5.0.2/js/all.js")
        title= title
    body
        .wrapper
            .wrapper__header
                .content
                    .content__container
                        .content__row
                            .header.content__main
                                .logo
                                    .logo__container
                                        .logo__img-container
                                            img.logo__img(src="img/vso_v.png")
                                        .logo__text-container
                                            h3.logo__h2 Панель управления
                                .main-menu.frame.frame--style_shadow
                                    .main-menu__container
                                        ul.main-menu__main-list.list.list--type_h
                                            li.main-menu__list-element.list__list-element.list__list-element--type_h
                                                a(href="./index.html").main-menu__link.list__link
                                                    i.fas.fa-home
                                            li.main-menu__list-element.list__list-element.list__list-element--type_h
                                                a(href="./admin_users.html").main-menu__link.list__link Пользователи
                                            li.main-menu__list-element.list__list-element.list__list-element--type_h
                                                a(href="./admin_tests.html").main-menu__link.list__link Тестирование
                                            li.main-menu__list-element.list__list-element.list__list-element--type_h
                                                a(href="./admin_sworks.html").main-menu__link.list__link Научные работы
                                        ul.main-menu__user-control.list.list--type_h
                                            li.main-menu__list-element.list__list-element.list__list-element--type_h
                                                p.main-menu__username Александр Щетников
                                            li.main-menu__list-element.list__list-element.list__list-element--type_h
                                                a(href="./index.html").main-menu__link.list__link Выйти
            .wrapper__body
                .content.body
                    block content
        script(defer,src="js/script.js")
        script(defer,src="js/admin.js")

